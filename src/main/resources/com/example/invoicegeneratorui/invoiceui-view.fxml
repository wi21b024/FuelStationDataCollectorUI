<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.invoicegeneratorui.InvoiceUIController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Invoice Generator: ">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10">
        <Label prefWidth="70" text="Customer ID:" />
        <TextField fx:id="customerID" prefHeight="25.0" prefWidth="290.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#btnGenerate_Clicked" prefWidth="110" text="Generate Invoice" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label prefWidth="70" text="PDF Pfad:" />
        <TextField editable="false" fx:id="info" prefHeight="25.0" prefWidth="290.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#btnInfo_Clicked" prefWidth="110" text="Info" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#btnExit_Clicked" prefWidth="80" text="Exit" />
    </HBox>
</VBox>
